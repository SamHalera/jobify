{% extends "base.html.twig"%}

{% block title %} Job Offer {% endblock %}


{% block body %}


    <div class='row justify-content-center'>
        <div id="content" class="col-12">
            <div class='jumbotron jumbotron-fluid text-center'>

                <h1 class='display-3 mb-3'>{{jobOffer.title}}</h1>

                {% if app.user.hasRole("ROLE_MANAGER")%}
                    <div class="infos text-center mx-auto">
                        <div class="mb-3">
                            <h4>Pôle <strong>{{jobOffer.department.name}}</strong></h4>
                            <ul>
                                {% for user in jobOffer.department.userManager %}
                                    <li class="text-muted">( {{ user.username }} )</li>
                                    {% endfor %}
                            </ul>
                            <small class="text-muted font-italic">date de création {{jobOffer.createdAt|date('d/m/y')}}</small>
                            <br>
                            {% if jobOffer.updatedAt is not null %}
                                <small class="text-muted font-italic">date de modification : {{jobOffer.updatedAt|date('d/m/Y')}}</small>
                                <br>
                            {% endif %}

                            {% if jobOffer.expiresAt is not null %}
                                <small class="font-italic text-success"><strong>poste à pourvoir jusqu'à : {{jobOffer.expiresAt|date('d/m/Y')}}</strong></small>
                            {% endif %}
                        </div>

                        <a href="{{path('app_admin_job_offer_edit', {'id' : jobOffer.id})}}" class="btn btn-info btn-sm"><i class="el-icon-edit"></i> modifier</a>

                        {% if jobOffer.published == false %}
                            <a href="{{path('app_admin_job_offer_published', {'id' : jobOffer.id, 'bool' : 'true' })}}" class="btn btn-success btn-sm m-2"><i class="el-icon-s-promotion"></i> publier</a>
                        {% else %}
                            <a href="{{path('app_admin_job_offer_published', {'id' : jobOffer.id, 'bool' : 'false' })}}" class="btn btn-warning btn-sm m-2"><i class="el-icon-document"></i> brouillon</a>
                        {% endif %}
                        <a href="{{path('app_admin_job_offer_delete', {'id' : jobOffer.id})}}" class="btn btn-outline-danger btn-sm m-2"><i class="el-icon-delete"></i></a>

                        <div class="mt-3">
                            <a href="{{path('app_admin_job_offer_list')}}" class="btn btn-info m-2">retour</a>
                        </div>
                    </div>
                {% endif %}

            </div>
        </div>

        <div class='col-md-9'>
            <section class="about-us mb-5">
                <h3 class="mb-5 text-center">A propos de nous</h3>

                <div class="about-us-content font-weight-light col-10 mx-auto">
                    {{jobOffer.contentSociety|raw}}
                </div>
            </section>

            <section class="mission mb-5">
                <h3 class="mb-5 text-center">Votre mission</h3>

                <div class="mission-content font-weight-light col-10 mx-auto">
                    {{jobOffer.contentMission|raw}}
                </div>
            </section>

            <section class="requirements mb-5">
                <h3 class="mb-5 text-center">Profil recherché</h3>

                <div class="requirements-content font-weight-light col-10 mx-auto">
                    {{jobOffer.contentRequirements|raw}}
                </div>
            </section>

            {% if app.user.hasRole("ROLE_CANDIDAT")%}
                <div class="application text-center">
                    <a href="" class="btn btn-outline-info text-uppercase">postuler</a>
                </div>
            {% endif %}
        </div>

        <div class='col-md-3 border-left'>

            {% if app.user.hasRole("ROLE_MANAGER")%}
                <h3 class='mb-3'>Candidatures</h3>

                <div class='mb-4'>
                    <a class="" href=""><span class="">Antonio Alteri</span></a>
                    <span class="text-muted font-italic">(12-12-2019)</span>
                </div>
            {% else %}
                <h3 class="mb-3">Compétences</h3>
                <span>PHP</span>

                <hr>

                <h4>Partager</h4>
                <a class="m-2" href=""><i class="fab fa-linkedin fa-2x"></i></a>
                <a class="m-2" href=""><i class="fab fa-facebook-square fa-2x"></i></a>
                <a class="m-2" href=""><i class="fab fa-whatsapp-square fa-2x"></i></a>
                <a class="m-2" href=""><i class="fas fa-envelope fa-2x"></i></a>

            {% endif %}

            {% if jobOffer.categories|length > 0 %}
                <h4 class='mb-3'>Catégories</h4>

                <ul>
                    {% for category in jobOffer.categories %}
                        <li class='badge badge-pill badge-secondary font-weight-light'>{{ category.name}}</li>
                        {% endfor %}

                </ul>
            {% endif %}
        </div>




    </div>

{% endblock %}
