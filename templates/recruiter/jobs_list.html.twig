{% extends "base.html.twig" %}

{% block title %}Job Offers{% endblock %}

{% block body %}


    <div class="row">
        <div class="col-12">
            <div class='jumbotron jumbotron-fluid text-center'>
                <h2 class='display-2'>Espace Recruteur</h2>
                <h3 class='display-3'>Vos offres d'emploi</h3>
            </div>
        </div>
    
        <h3 class="col-12 text-center">Vous avez crée
	        {{jobsList|length}} offre{% if jobsList|length < 2 %}s{% endif %} d'emploi</h3>
        {% for job in jobsList %}
            <div class="col-3 mb-3">
                <div class="card jobbo-card">
                    <div class="card-body">
                        <div class="card-title">
                            <a href='{{path('app_recruiter_job_show', {'id' : job.id})}}'>

                                <h4 class="text-center">{{job.title}}</h4>
                            </a>
                        </div>
                        <hr>

                        <div class="text-center">
                            <h5 class="mb-3">
                                <small class="text-muted">par Auteur TODO</small>
                            </h5>


                            <a href="" class="btn btn-info btn-sm m-2">
                                <small>candidatures</small>
                                <span class='badge badge-light'>Nb</span>
                            </a>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="text-center">

                            <small class="text-muted">annonce créée le {{job.createdAt|date('d/m/y')}}</small>
                            <br>
                            {% if job.publishedAt is not null %}
                                <small class="text-muted font-italic">offre en ligne depuis le {{job.publishedAt|date('d/m/y')}}</small>
                                <br>
                            {% endif %}

                        </div>
                    </div>
                </div>
            </div>    
        {% endfor %}
    </div>



{% endblock %}