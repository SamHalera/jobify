{% extends "base.html.twig"%}

{% block title %} Job Offer Application{% endblock %}


{% block body %}


    <div class='row justify-content-center'>
        <div id="content" class="col-12">
            <div class='jumbotron jumbotron-fluid text-center bg-img text-white'>
                <div class="overlay">
                    <h1 class='display-3 mb-3'>{{application.jobOffer.title}}</h1>
                    <h2 class="display-4 mb-3">Candidature de :</h2>
                    <h3 class="mb-2">{{application.applicantName}}</h3>
                    <h5 class="font-italic mb-4">(postulé le {{application.createdAt|date('d/m/y')}})</h5>

                    <div class="infos text-center mx-auto">
                        

                        <div class="mt-3">
                            <a href="{{path('app_applications_list', {'id' : application.jobOffer.id})}}" class="btn btn-info m-2">retour</a>
                        </div>
                    </div>
               
                </div>
            </div>
        </div>

        <div class='col-md-9'>
            
        
            <section class="mission mb-5">
                <h3 class="mb-3">Message de motivation</h3>

                <div class="mission-content font-weight-light">
                    {{application.motivationalMessage}}
                </div>
            </section>

            <section class="requirements mb-5">
                <h5 class="mb-2">CV</h5>

                <div class="requirements-content font-weight-light">
                    CV LINK
                </div>
            </section>
        </div>

        <div class='col-md-3 border-left'>

            <div class="mb-3">
                <h4>Pôle <strong>TODO</strong></h4>
                <ul>
                    
                    <li class="">TODO Responsable</li>
                        
                </ul>
            </div>
           
            <h4 class='mb-3'>Actions</h4>
        
            <div class='mb-4'>
                    <a href="" class="btn btn-success btn-sm m-2">
                        <i class="el-icon-s-promotion"></i> valider
                    </a>
                    <a href="" class="btn btn-secondary btn-sm m-2">
                        <i class="el-icon-circle-close"></i> rejeter
                    </a>
                
                    <a href="" class="btn btn-warning btn-sm m-2">
                        <i class="el-icon-delete"></i> supprimer
                    </a>
            </div>
               
                
            
        </div>




    </div>

{% endblock %}
