                                <small class="text-muted font-italic">mise à jour le {{job.updatedAt|date('d/m/Y')}}</small>
                                <br>
                                
                            {% endif %}
                            
                            <small class="text-muted font-italic">offre publiée {{job.publishedAt|date('d/m/y')}}</small>
                            <br>
                            

                        </div>


                        <div class="mt-3">
