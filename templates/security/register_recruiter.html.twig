{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{parent()}}

    <link rel="stylesheet" href="{{asset('css/login.css')}}">
{% endblock %}

{% block title %}Enregistrez-vous{% endblock %}

{% block body %}
    <div class='row justify-content-center'>
        <div id="content" class="col-12">
            <div class='jumbotron jumbotron-fluid text-center'>
                <h1 class='display-3 mb-3'>Enregistrez-vous</h1>
                <h2 class='display-5 mb-3'>Vous êtes un recruter</h2>
            </div>
        </div>
            
        <div class="col-6">
            {{form_start(registerRecruiterForm)}}
                {{form_widget(registerRecruiterForm)}}
            
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="terms"> J'accepte les terms...
                    </label>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary" type="submit">
                    Enregistrer
                    </button>
                </div>

            {{form_end(registerRecruiterForm)}}
            <div class="form-group">
                <a href="{{path('app_login')}}">Vous avez déjà un compte ?</a>
            </div>
        </div>
    </div>

    
    
{% endblock %}
